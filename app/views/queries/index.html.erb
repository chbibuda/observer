<h1>Listing queries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>Token</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @queries.each do |query| %>
  <tr>
    <td><%= query.name %></td>
    <td><%= query.value %></td>
    <td><%= link_to query.token, data_queries_path({:token => query.token}), :target => '_blank' %></td>
    <td><%= link_to 'Edit', edit_query_path(query) %></td>
    <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

