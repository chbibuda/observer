<h1>Widgets</h1>
<table class="table--common">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @widgets.each do |widget| %>
    <tr>
      <td><%= widget.name %></td>
      <td class="action-cell">
          <a href="<%= edit_widget_path(widget) %>" class="action"><i class="icon-pencil"></i></a>
      </td>
      <td class="action-cell">
        <a href="<%= widget_path(widget) %>" class="action" data-confirm="Are you sure?" data-method="delete">
          <i class="icon-cross"></i>
        </a>
      </td>    </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Widget', new_widget_path, { :class => 'button small' } %>
